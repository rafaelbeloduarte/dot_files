# i3-gaps inicio #########################################

focus_follows_mouse no

#Needed for i3-gaps
#hide_edge_borders both
for_window [class="^.*"] border pixel 2 
gaps inner 5
gaps outer 0

# Activate smart borders (always)
smart_borders on

# Only enable gaps on a workspace when there is at least one container
# smart_gaps on

# Only enable outer gaps when there is exactly one container
smart_gaps inverse_outer

bindsym $mod+bracketleft		gaps outer current plus 5
bindsym $mod+Shift+bracketleft		gaps outer current minus 5

bindsym $mod+bracketright		gaps inner current plus 5
bindsym $mod+Shift+bracketright		gaps inner current minus 5

bindsym $mod+g gaps inner current toggle 5
bindsym $mod+n gaps outer current toggle 5

